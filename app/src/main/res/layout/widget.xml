<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:background="#77727272"
              android:paddingTop="1dp"
              android:paddingBottom="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aafcfcfc">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameicon"
            android:src="@drawable/cs"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/w_refresh"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:src="@drawable/ic_action_autorenew_36"
                android:background="@null"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:padding="3dp"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:layout_marginRight="7dp">

                <TextView
                    android:id="@+id/hostname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some text sssssssssssssssssss"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:textColor="#212121"
                    android:layout_alignParentBottom="false"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="127.0.0.1:27016"
                    android:id="@+id/hostip"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="false"
                    android:textSize="12sp"
                    android:textColor="#727272"
                    android:layout_alignParentBottom="false"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="32/32 on de_dust2"
                    android:id="@+id/hostinfo"
                    android:textSize="12sp"
                    android:textColor="#727272"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_below="@+id/hostip"
                    android:layout_alignParentLeft="true"
                    />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>