<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="30dp"
    android:paddingBottom="5dp">

<LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/menu_bg"
              android:elevation="2dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Консоль"
        android:id="@+id/menuitem_console"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#212121"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6">
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Список игроков"
        android:id="@+id/menuitem_players"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/PrimaryDarkText"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Удалить"
        android:id="@+id/menuitem_delete"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#212121"
        android:textSize="16sp"
        android:layout_below="@+id/menuitem_console"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="@string/maps"
        android:id="@+id/menuitem_maps"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#212121"
        android:textSize="16sp"
        android:layout_below="@+id/menuitem_delete"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

</LinearLayout>
</RelativeLayout>