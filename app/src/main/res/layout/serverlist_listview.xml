<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:background="@drawable/item_list_selector"
    android:orientation="horizontal"
    android:id="@+id/listview_item">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameicon"
        android:src="@drawable/cs"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_navigation_more_vert_grey"
        android:background="@null"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgbMenu">

        <TextView
            android:id="@+id/hostname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some text sssssssssssssssssss"
            android:textSize="16sp"
            android:typeface="sans"
            android:textColor="@color/PrimaryDarkText"
            android:layout_alignParentBottom="false"
            android:singleLine="true"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="127.0.0.1:27016"
            android:id="@+id/hostip"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:textSize="12sp"
            android:textColor="@color/SecondaryDark"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/hostname"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="32/32 on de_dust2"
            android:id="@+id/hostinfo"
            android:textSize="12sp"
            android:paddingTop="1dp"
            android:textColor="@color/SecondaryDark"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:layout_below="@+id/hostip"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <!--LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/title"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:background="#FF8000"
        android:layout_toRightOf="@+id/imageView"></LinearLayout-->


</RelativeLayout>